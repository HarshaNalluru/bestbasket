 <nav class="navbar navbar-default navbar-static-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <figure id="logo" style="margin-top: 0.3em" class="columns six" data-hook><%= logo img_options:{class:'img-responsive',width:138}%></figure>
    </div>  
    <%= content_tag :ul, class: 'nav navbar-nav' do %>
      <% @taxonomies.each do |taxonomy| %>
        <%= content_tag :li do %>
          <%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, 'aria-haspopup' => 'true' do %>
            <%= taxonomy.name %> <span class='caret'></span>
          <% end %>
          <%= nav_tree(taxonomy.root, @taxon) %>
        <% end %>
      <% end %>
    <% end %>

  </div><!-- /.container-fluid -->
</nav>